<div class="container">
  <div class="row">
    {{!-- nav bar --}}
    <ul class="nav nav-pills">
      <li class="nav-item">
        <a href="/" class-"nav-link">Home</a>
      </li>
      <li class="nav-item"><a href="../../form" class-"nav-link">+</a></li>
      <li class="nav-item"><a href="recipes" class-"nav-link">My Recipes</a></li>
    </ul>
  </div>

  <div class="row">
    {{!-- display all recipes --}}
    <div class="recipe-list">
      {{!-- TRIED {{#each Recipes}} --}}
      {{#each recipes}}
      <div class="animated row recipe-row col-12 fadeInUp">
        {{!-- recipe info --}}
        <div class="card">
          <div class="row no-gutters">
            <div class="col-md-4">
              <img src="..." class="card-img" alt="...">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h2 class="card-title">{{this.dataValues.name}}</h2>
                <h4>{{this.dataValues.main_oz}} {{this.dataValues.main_alc}}</h4>
                <p class="card-text">{{this.dataValues.instructions}}</p>
                    <p>{{this.dataValues.ing1}}</p>
                    <p>{{this.dataValues.ing2}}</p>
                    <p>{{this.dataValues.ing3}}</p>
                    <p>{{this.dataValues.ing4}}</p>
                    <p>{{this.dataValues.ing5}}</p>
                    <p>{{this.dataValues.ing6}}</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>

